<% if current_user.nil? %>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
    <%=link_to(image_tag("logo.png"), root_path, class: "navbar-brand")%>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="search-container">
    <%= simple_form_for :search, url: listings_path, method: "GET", html: { class: 'search-form-control form-inline mt0' } do |f| %>
      <%= f.input :name, label_html: {class: "label"}, input_html: {value: "", class: 'form-control string required mr-sm-2 mt0', placeholder: "White Tie" }  %>
      <%= f.input :start_date, as: :date, html5: true, label_html: {class: "label"}, input_html: {value: "", class: 'form-control mr-sm-2' }%>
      <%= f.input :end_date, as: :date, html5: true, label_html: {class: "label"}, input_html: {value: "", class: 'form-control mr-sm-2' } %>
      <%= f.submit "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
    </div>

    <%= link_to "Login", new_user_session_path , class: "btn btn-primary" %>

  </div>

<% else %>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
    <%=link_to(image_tag("logo.png"), root_path, class: "navbar-brand")%>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="search-container">
      <%= simple_form_for :search, url: listings_path, method: "GET", html: { class: 'search-form-control form-inline mt0' } do |f| %>
        <%= f.input :name, label_html: {class: "label"}, input_html: {value: "", class: 'form-control string required mr-sm-2 mt0', placeholder: "White Tie" }  %>
        <%= f.input :start_date, as: :date, html5: true, label_html: {class: "label"}, input_html: {value: "", class: 'form-control mr-sm-2' }%>
        <%= f.input :end_date, as: :date, html5: true, label_html: {class: "label"}, input_html: {value: "", class: 'form-control mr-sm-2' } %>
        <%= f.submit "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
    </div>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <p class="navbar-name pr-4 pt-2" style="color: white; font-size: 20px;"><%=current_user.first_name %></p>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, height: 70, width: 70, crop: :fill, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add a listing", new_listing_path, class: "dropdown-item" %>
            <%= link_to "My Bookings", my_bookings_path, class: "dropdown-item" %>
            <%= link_to "My Listings", my_listings_path, class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>

<% end %>
