<% content_for :navbar do %>
      <%= render 'shared/navbar_white' %>
 <% end %>

  <div class="index-container">

    <h1>Listings</h1>

    <div class="listings-container">

      <% @listings.each do |listing| %>
        <div class="card_price-container">
          <p  class=card-index-price> $ <%= listing.price_per_night %> per night</p>
          <%= link_to listing_path(listing.id) do%>
            <div class="card-index">
              <div class="content">
                <h2 class="title"><%= listing.name %></h2>
                <p class="card-index-info"><%= listing.description %></p>
                <p class="card-index-info"><%= listing.category %></p>
              </div>
            </div>
        </div>


        <% end %>
      <% end %>

    </div>
  </div>

